{
  "expo": {
    "name": "SAM",
    "slug": "SAM",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow SAM to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow SAM to use the microphone."
      },
      "bundleIdentifier": "com.shamo.sam"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#031622"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.shamo.sam"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#031622"
        }
      ],
      "expo-dev-client",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "ba8f3530-beeb-4b00-83db-f49570b6867f"
      }
    }
  }
}
